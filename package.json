    "@radix-ui/react-tabs": "^1.1.12",
    "@radix-ui/react-tooltip": "^1.2.7",
    "@react-spring/three": "^10.0.1",
    "@react-three/drei": "^9.117.3",
    "@react-three/fiber": "^8.17.10",
    "@react-three/xr": "^6.6.20",
    "@tarikjabiri/dxf": "^2.8.9",
    "@types/fabric": "^5.3.10",
    "@types/jspdf": "^1.3.3",
    "@types/jszip": "^3.4.0",
    "clsx": "^2.1.1",
    "dxf-parser": "^1.1.2",
    "esbuild": "^0.25.6",
    "fabric": "^6.7.1",
    "firebase": "^11.9.1",
    "framer-motion": "^12.23.7",
    "html2canvas": "^1.4.1",
    "i18next": "^25.3.6",
    "jspdf": "^3.0.1",
    "jszip": "^3.10.1",
    "konva": "^9.3.22",
    "lucide-react": "^0.525.0",
    "qrcode": "^1.5.4",
    "react": "^18.3.1",
    "react-colorful": "^5.6.1",
    "react-dom": "^18.3.1",
    "react-error-boundary": "^6.0.0",
    "react-i18next": "^15.6.1",
    "react-konva": "^18.2.10",
    "react-router-dom": "^7.6.0",
    "svg2pdf.js": "^2.5.0",
    "three": "^0.178.0",
    "three-svg-renderer": "^1.0.4",
    "zustand": "^5.0.5"
  },
  "devDependencies": {
    "@eslint/js": "^9.25.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^22.15.21",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@types/three": "^0.176.0",
    "@vitejs/plugin-react": "^4.4.1",
    "autoprefixer": "^10.4.21",
    "eslint": "^9.25.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "gh-pages": "^6.3.0",
    "globals": "^16.0.0",
    "happy-dom": "^17.6.3",
    "jsdom": "^26.1.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.17",
    "typescript": "~5.8.3",
