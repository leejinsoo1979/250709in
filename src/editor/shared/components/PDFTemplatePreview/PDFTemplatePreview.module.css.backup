/* CSS 변수를 사용한 테마 시스템 */
.lightTheme {
  --bg-primary: #f5f5f5;
  --bg-secondary: #ffffff;
  --bg-tertiary: #fafafa;
  --bg-hover: rgba(124, 58, 237, 0.05);
  --bg-button: #f0f0f0;
  --bg-button-hover: #e0e0e0;
  --bg-drawingArea: #ffffff;
  
  --text-primary: #333333;
  --text-secondary: #666666;
  --text-tertiary: #999999;
  --text-button: #333333;
  
  --border-primary: #e0e0e0;
  --border-secondary: #ddd;
  --border-hover: #7c3aed;
  
  --shadow: rgba(0, 0, 0, 0.05);
  
  --accent-primary: #7c3aed;
  --accent-hover: #6b2ed6;
  --accent-light: rgba(124, 58, 237, 0.1);
  --accent-lighter: rgba(124, 58, 237, 0.05);
}

.darkTheme {
  --bg-primary: #0f0f0f;
  --bg-secondary: #1a1a1a;
  --bg-tertiary: #242424;
  --bg-hover: rgba(139, 92, 246, 0.1);
  --bg-button: #2a2a2a;
  --bg-button-hover: #3a3a3a;
  --bg-drawingArea: #1f1f1f;
  
  --text-primary: #e5e5e5;
  --text-secondary: #a3a3a3;
  --text-tertiary: #737373;
  --text-button: #e5e5e5;
  
  --border-primary: #2e2e2e;
  --border-secondary: #3e3e3e;
  --border-hover: #8b5cf6;
  
  --shadow: rgba(0, 0, 0, 0.3);
  
  --accent-primary: #8b5cf6;
  --accent-hover: #a78bfa;
  --accent-light: rgba(139, 92, 246, 0.2);
  --accent-lighter: rgba(139, 92, 246, 0.1);
}

/* 기본 스타일을 CSS 변수로 대체 */
.overlay.lightTheme,
.overlay.darkTheme {
  background-color: var(--bg-primary);
}

.lightTheme .fullContainer,
.darkTheme .fullContainer {
  background-color: var(--bg-primary);
}

.lightTheme .sidebar,
.darkTheme .sidebar {
  background-color: var(--bg-secondary);
  border-right: 1px solid var(--border-primary);
  box-shadow: 2px 0 4px var(--shadow);
}

.lightTheme .tabButtons,
.darkTheme .tabButtons {
  background-color: var(--bg-tertiary);
  border-right: 1px solid var(--border-primary);
}

.lightTheme .tabButton,
.darkTheme .tabButton {
  color: var(--text-secondary);
}

.lightTheme .tabButton:hover,
.darkTheme .tabButton:hover {
  color: var(--text-primary);
  background-color: var(--bg-hover);
}

.lightTheme .tabButton.active,
.darkTheme .tabButton.active {
  color: var(--accent-primary);
  background-color: var(--bg-secondary);
}

.lightTheme .tabContent,
.darkTheme .tabContent {
  background-color: var(--bg-secondary);
}

.lightTheme .menuTitle,
.darkTheme .menuTitle {
  color: var(--text-primary);
}

.lightTheme .viewMenuItem,
.darkTheme .viewMenuItem {
  background-color: var(--bg-tertiary);
  border: 1px solid var(--border-primary);
  color: var(--text-primary);
}

.lightTheme .viewMenuItem:hover,
.darkTheme .viewMenuItem:hover {
  border-color: var(--border-hover);
  background-color: var(--bg-button-hover);
}

.lightTheme .viewMenuTitle,
.lightTheme .textMenuTitle,
.darkTheme .viewMenuTitle,
.darkTheme .textMenuTitle {
  color: var(--text-primary);
}

.lightTheme .textItem,
.darkTheme .textItem {
  background-color: var(--bg-tertiary);
  border: 1px solid var(--border-primary);
  color: var(--text-primary);
}

.lightTheme .textItem:hover,
.darkTheme .textItem:hover {
  background-color: var(--bg-button-hover);
  border-color: var(--border-secondary);
}

.lightTheme .editTextArea,
.darkTheme .editTextArea {
  background-color: var(--bg-tertiary);
  color: var(--text-primary);
  border-color: var(--border-primary);
}

.lightTheme .header,
.darkTheme .header {
  background-color: var(--bg-secondary);
  border-bottom: 1px solid var(--border-primary);
}

.lightTheme .header h2,
.darkTheme .header h2 {
  color: var(--text-primary);
}

.lightTheme .paperSelect,
.darkTheme .paperSelect {
  background-color: var(--bg-tertiary);
  color: var(--text-primary);
  border: 1px solid var(--border-primary);
}

.lightTheme .orientationBtn,
.darkTheme .orientationBtn {
  background-color: var(--bg-button);
  color: var(--text-secondary);
  border: 1px solid var(--border-primary);
}

.lightTheme .orientationBtn:hover,
.darkTheme .orientationBtn:hover {
  background-color: var(--bg-button-hover);
}

.lightTheme .orientationBtn.active,
.darkTheme .orientationBtn.active {
  background-color: var(--accent-primary);
  border-color: var(--accent-primary);
  color: #fff;
}

.lightTheme .previewArea,
.darkTheme .previewArea {
  background-color: var(--bg-primary);
}

.lightTheme .drawingArea {
  background-color: var(--bg-drawingArea);
  background-image: 
    repeating-linear-gradient(
      0deg,
      transparent,
      transparent 19px,
      rgba(0, 0, 0, 0.03) 19px,
      rgba(0, 0, 0, 0.03) 20px
    ),
    repeating-linear-gradient(
      90deg,
      transparent,
      transparent 19px,
      rgba(0, 0, 0, 0.03) 19px,
      rgba(0, 0, 0, 0.03) 20px
    );
}

.darkTheme .drawingArea {
  background-color: var(--bg-drawingArea);
  background-image: 
    repeating-linear-gradient(
      0deg,
      transparent,
      transparent 19px,
      rgba(255, 255, 255, 0.02) 19px,
      rgba(255, 255, 255, 0.02) 20px
    ),
    repeating-linear-gradient(
      90deg,
      transparent,
      transparent 19px,
      rgba(255, 255, 255, 0.02) 19px,
      rgba(255, 255, 255, 0.02) 20px
    );
}

.lightTheme .pageNav,
.darkTheme .pageNav {
  background-color: var(--bg-secondary);
  border-top: 1px solid var(--border-primary);
}

.lightTheme .pageBtn,
.darkTheme .pageBtn {
  background-color: var(--bg-button);
  color: var(--text-secondary);
  border: 1px solid var(--border-primary);
}

.lightTheme .pageBtn:hover,
.darkTheme .pageBtn:hover {
  background-color: var(--bg-button-hover);
}

.lightTheme .pageBtn.active,
.darkTheme .pageBtn.active {
  background-color: var(--accent-primary);
  border-color: var(--accent-primary);
  color: #fff;
}

.lightTheme .addPageBtn,
.darkTheme .addPageBtn {
  background-color: var(--bg-button);
  color: var(--text-secondary);
  border: 1px solid var(--border-primary);
}

.lightTheme .addPageBtn:hover,
.darkTheme .addPageBtn:hover {
  background-color: var(--bg-button-hover);
}

.lightTheme .zoomControlsBottom,
.darkTheme .zoomControlsBottom {
  background-color: var(--bg-secondary);
  border: 1px solid var(--border-primary);
}

.lightTheme .zoomBtnBottom,
.darkTheme .zoomBtnBottom {
  color: var(--text-primary);
  border: 1px solid var(--border-primary);
  background-color: var(--bg-button);
}

.lightTheme .zoomBtnBottom:hover,
.darkTheme .zoomBtnBottom:hover {
  background-color: var(--bg-button-hover);
  border-color: var(--border-hover);
}

.lightTheme .zoomSlider,
.darkTheme .zoomSlider {
  background: var(--border-primary);
}

.lightTheme .zoomSlider::-webkit-slider-thumb,
.darkTheme .zoomSlider::-webkit-slider-thumb {
  background: var(--accent-primary);
}

.lightTheme .zoomSlider::-moz-range-thumb,
.darkTheme .zoomSlider::-moz-range-thumb {
  background: var(--accent-primary);
}

.lightTheme .zoomValueBottom,
.darkTheme .zoomValueBottom {
  color: var(--text-primary);
}

.lightTheme .draggableView,
.darkTheme .draggableView {
  background-color: var(--bg-secondary);
  border: 2px solid var(--border-primary);
}

.lightTheme .draggableView.selected,
.darkTheme .draggableView.selected {
  border-color: var(--accent-primary);
}

.lightTheme .viewControls,
.darkTheme .viewControls {
  background-color: var(--bg-secondary);
  border: 1px solid var(--border-primary);
}

.lightTheme .scaleBtn,
.lightTheme .deleteBtn,
.darkTheme .scaleBtn,
.darkTheme .deleteBtn {
  background-color: var(--bg-button);
  color: var(--text-primary);
  border: 1px solid var(--border-primary);
}

.lightTheme .scaleBtn:hover,
.lightTheme .deleteBtn:hover,
.darkTheme .scaleBtn:hover,
.darkTheme .deleteBtn:hover {
  background-color: var(--bg-button-hover);
}

.lightTheme .closeBtn,
.darkTheme .closeBtn {
  color: var(--text-secondary);
  background-color: var(--bg-button);
}

.lightTheme .closeBtn:hover,
.darkTheme .closeBtn:hover {
  background-color: var(--bg-button-hover);
  color: var(--text-primary);
}

/* 뷰어 오버레이 테마 스타일 */
.lightTheme .viewerOverlay,
.darkTheme .viewerOverlay {
  background-color: rgba(0, 0, 0, 0.7);
}

.lightTheme .viewerContainer {
  background-color: #f5f5f5;
  border: 1px solid #e0e0e0;
}

.darkTheme .viewerContainer {
  background-color: #1a1a1a;
  border: 1px solid #444;
}

.lightTheme .viewerHeader {
  background-color: #ffffff;
  border-bottom: 1px solid #e0e0e0;
}

.darkTheme .viewerHeader {
  background-color: #222;
  border-bottom: 1px solid #444;
}

.lightTheme .viewerHeader h3 {
  color: #333;
}

.darkTheme .viewerHeader h3 {
  color: #fff;
}

.lightTheme .viewerHeader .closeButton {
  color: #666;
}

.darkTheme .viewerHeader .closeButton {
  color: #ccc;
}

.lightTheme .viewerHeader .closeButton:hover {
  color: #333;
}

.darkTheme .viewerHeader .closeButton:hover {
  color: #fff;
}

.lightTheme .viewerSubHeader {
  background-color: #fafafa;
  border-bottom: 1px solid #e0e0e0;
}

.darkTheme .viewerSubHeader {
  background-color: #2a2a2a;
  border-bottom: 1px solid #444;
}

.lightTheme .viewerContent {
  background-color: #ffffff;
}

.darkTheme .viewerContent {
  background-color: #1a1a1a;
}

.lightTheme .viewerFooter {
  background-color: #fafafa;
  border-top: 1px solid #e0e0e0;
}

.darkTheme .viewerFooter {
  background-color: #2a2a2a;
  border-top: 1px solid #444;
}

.lightTheme .captureButton,
.lightTheme .cancelButton {
  background-color: #f0f0f0;
  color: #333;
  border: 1px solid #d0d0d0;
}

.darkTheme .captureButton,
.darkTheme .cancelButton {
  background-color: #3a3a3a;
  color: #fff;
  border: 1px solid #555;
}

.lightTheme .captureButton:hover,
.lightTheme .cancelButton:hover {
  background-color: #e0e0e0;
}

.darkTheme .captureButton:hover,
.darkTheme .cancelButton:hover {
  background-color: #4a4a4a;
}

/* 뷰어 오버레이 내부 컨트롤 테마 스타일 */
.lightTheme .toggleLabel {
  color: #666;
}

.darkTheme .toggleLabel {
  color: #aaa;
}

.lightTheme .switch {
  background-color: #ccc;
}

.darkTheme .switch {
  background-color: #555;
}

.lightTheme .switch.on {
  background-color: #007AFF;
}

.darkTheme .switch.on {
  background-color: #0A84FF;
}

.lightTheme .checkboxLabel {
  color: #333;
}

.darkTheme .checkboxLabel {
  color: #ccc;
}

.lightTheme .renderModeButton,
.lightTheme .viewModeButton,
.lightTheme .viewDirectionButton {
  background-color: #f0f0f0;
  color: #333;
  border: 1px solid #d0d0d0;
}

.darkTheme .renderModeButton,
.darkTheme .viewModeButton,
.darkTheme .viewDirectionButton {
  background-color: #3a3a3a;
  color: #ccc;
  border: 1px solid #555;
}

.lightTheme .renderModeButton:hover,
.lightTheme .viewModeButton:hover,
.lightTheme .viewDirectionButton:hover {
  background-color: #e0e0e0;
}

.darkTheme .renderModeButton:hover,
.darkTheme .viewModeButton:hover,
.darkTheme .viewDirectionButton:hover {
  background-color: #4a4a4a;
}

.lightTheme .renderModeButton.active,
.lightTheme .viewModeButton.active,
.lightTheme .viewDirectionButton.active {
  background-color: #007AFF;
  color: #fff;
  border-color: #007AFF;
}

.darkTheme .renderModeButton.active,
.darkTheme .viewModeButton.active,
.darkTheme .viewDirectionButton.active {
  background-color: #0A84FF;
  color: #fff;
  border-color: #0A84FF;
}

.lightTheme .themeToggle {
  color: #666;
}

.darkTheme .themeToggle {
  color: #ccc;
}

.lightTheme .themeToggle:hover {
  color: #333;
  background-color: #f0f0f0;
}

.darkTheme .themeToggle:hover {
  color: #fff;
  background-color: #3a3a3a;
}