}

.viewModeButtons button.active,
.view2DButtons button.active,
.renderModeButtons button.active,
.viewerSubHeader .viewModeButtons button.active,
.viewerSubHeader .view2DButtons button.active,
.viewerSubHeader .renderModeButtons button.active {
  background-color: var(--accent-primary);
