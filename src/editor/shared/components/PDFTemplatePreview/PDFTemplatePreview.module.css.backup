  justify-content: space-between;
  align-items: center;
  gap: 20px;
}

.viewerSubHeader .leftControls,
.viewerSubHeader .centerControls,
.viewerSubHeader .rightControls {
  display: flex;
  align-items: center;
  gap: 16px;
}

.viewerSubHeader .toggleGroup {
  display: flex;
  align-items: center;
  gap: 8px;
}

.viewerSubHeader .toggleLabel {
