  align-items: center;
  justify-content: center;
  transition: all 0.2s ease;
}

.viewerSubHeader .themeToggle:hover {
  background-color: #333;
  color: #fff;
}

.viewModeButtons button,
.view2DButtons button,
.renderModeButtons button,
.viewerSubHeader .viewModeButtons button,
.viewerSubHeader .view2DButtons button,
.viewerSubHeader .renderModeButtons button {
  padding: 6px 12px;
  background-color: transparent;
  border: none;
  color: #888;
  cursor: pointer;
  font-size: 13px;
  border-radius: 4px;
  transition: all 0.2s;
}

.viewModeButtons button:hover,
.view2DButtons button:hover,
.renderModeButtons button:hover,
.viewerSubHeader .viewModeButtons button:hover,
.viewerSubHeader .view2DButtons button:hover,
.viewerSubHeader .renderModeButtons button:hover {
  background-color: rgba(255, 255, 255, 0.05);
