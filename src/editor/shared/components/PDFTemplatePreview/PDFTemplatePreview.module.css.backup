  transition: all 0.2s ease;
}

.viewerSubHeader .renderModeButton:hover,
.viewerSubHeader .viewModeButton:hover,
.viewerSubHeader .viewDirectionButton:hover {
  color: #fff;
}

.viewerSubHeader .renderModeButton.active,
.viewerSubHeader .viewModeButton.active,
.viewerSubHeader .viewDirectionButton.active {
